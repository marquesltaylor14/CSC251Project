import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;

public class Project_Marques_Taylor {
    public static void main(String[] args) {
        ArrayList<Policy> policies = new ArrayList<>();
        int smokerCount = 0;
        int nonSmokerCount = 0;

        try (BufferedReader br = new BufferedReader(new FileReader("PolicyInformation.txt"))) {

            while (true) {
                String policyNumberLine = readNextNonBlankLine(br);
                if (policyNumberLine == null) {
                    break; // done reading the file
                }

                String providerName = readNextNonBlankLine(br);
                String firstName = readNextNonBlankLine(br);
                String lastName = readNextNonBlankLine(br);
                String ageLine = readNextNonBlankLine(br);
                String smokingStatus = readNextNonBlankLine(br);
                String heightLine = readNextNonBlankLine(br);
                String weightLine = readNextNonBlankLine(br);

                // If the file ended unexpectedly mid-policy, stop cleanly
                if (providerName == null || firstName == null || lastName == null || ageLine == null ||
                        smokingStatus == null || heightLine == null || weightLine == null) {
                    break;
                }

                int policyNumber = Integer.parseInt(policyNumberLine.trim());
                int age = Integer.parseInt(ageLine.trim());
                double height = Double.parseDouble(heightLine.trim());
                double weight = Double.parseDouble(weightLine.trim());

                Policy policy = new Policy(policyNumber, providerName, firstName, lastName, age, smokingStatus, height, weight);
                policies.add(policy);

                if (smokingStatus.trim().equalsIgnoreCase("smoker")) {
                    smokerCount++;
                } else {
                    nonSmokerCount++;
                }
            }

        } catch (IOException e) {
            System.out.println("Error: Could not read PolicyInformation.txt");
            System.out.println(e.getMessage());
            return;
        } catch (NumberFormatException e) {
            System.out.println("Error: A number in PolicyInformation.txt is not formatted correctly.");
            System.out.println(e.getMessage());
            return;
        }

        // Step 3: display info for each policy
        for (Policy policy : policies) {
            System.out.println("Policy Number: " + policy.getPolicyNumber());
            System.out.println("Provider Name: " + policy.getProviderName());
            System.out.println("Policyholder's First Name: " + policy.getPolicyholderFirstName());
            System.out.println("Policyholder's Last Name: " + policy.getPolicyholderLastName());
            System.out.println("Policyholder's Age: " + policy.getPolicyholderAge());
            System.out.println("Policyholder's Smoking Status: " + policy.getPolicyholderSmokingStatus());
            System.out.println("Policyholder's Height: " + policy.getPolicyholderHeight());
            System.out.println("Policyholder's Weight: " + policy.getPolicyholderWeight());
            System.out.printf("Policyholder's BMI: %.2f%n", policy.calculateBMI());
            System.out.printf("Policy Price: $%.2f%n", policy.calculatePolicyPrice());
            System.out.println(); // blank line between policies (remove if their sample doesn't want it)
        }

        // Step 4: smoker/non-smoker counts
        System.out.println("Number of policyholders that are smokers: " + smokerCount);
        System.out.println("Number of policyholders that are non-smokers: " + nonSmokerCount);
    }

    private static String readNextNonBlankLine(BufferedReader br) throws IOException {
        String line;
        while ((line = br.readLine()) != null) {
            line = line.trim();
            if (!line.isEmpty()) {
                return line;
            }
        }
        return null;
    }
}
